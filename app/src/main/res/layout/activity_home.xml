<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_start_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="start date"
            android:padding="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <TextView
            android:id="@+id/tv_end_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="end date"
            android:padding="10dp"
            app:layout_constraintTop_toBottomOf="@id/tv_start_day"
            app:layout_constraintLeft_toLeftOf="@id/tv_start_day"/>

        <TextView
            android:id="@+id/tv_date_between"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="between"
            android:padding="10dp"
            app:layout_constraintTop_toBottomOf="@id/tv_end_day"
            app:layout_constraintLeft_toLeftOf="@id/tv_start_day"/>

        <TextView
            android:id="@+id/tv_date_swap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="swap"
            android:padding="10dp"
            app:layout_constraintTop_toBottomOf="@id/tv_date_between"
            app:layout_constraintLeft_toLeftOf="@id/tv_start_day"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>